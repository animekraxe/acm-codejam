#!/usr/bin/env python
# python 2

import sys

def next_palindrome(digits):
    if len(digits) <= 1:
        return digits
    first, last = digits[0], digits[-1]
    rest = digits[1:-2]
    if last <= first:
        return 

while True:
    digits = [int(d) for d in sys.stdin.readline().strip()]
    if digits == [0]: break
    print int("".join(next_palindrome(digits))) - int("".join(digits))
